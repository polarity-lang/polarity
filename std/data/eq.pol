-- | The Martin-LÃ¶f equality type.
data Eq(implicit a: Type, x y: a) {
    -- | The reflexivity constructor.
    Refl(implicit a: Type, x: a): Eq(a:=a, x, x)
}

-- | Proof of symmetry of equality.
def Eq(x, y).sym(implicit a: Type, x y: a): Eq(y, x) { Refl(a, x) => Refl(a:=a, x) }

-- | Proof of transitivity of equality.
def Eq(x, y).trans(implicit a: Type, x y z: a, h: Eq(y, z)): Eq(x, z) {
    Refl(a, x) => h
}
